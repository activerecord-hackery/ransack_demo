  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

gem 'factory_girl'
gem 'faker'

gem 'pry'
gem 'responders'

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
end
